<!-- res/drawable/custom_frame_v2.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient untuk memberikan efek gradasi -->
    <gradient
        android:startColor="#3D7047"
    android:endColor="#F3EFEF"
    android:angle="90" />

    <!-- Sudut melengkung untuk tampilan yang lebih menarik -->
    <corners android:radius="20dp" />

    <!-- Set stroke (bingkai) -->
    <stroke
        android:width="4dp"
    android:color="#FFFFFF"
    />
</shape>
