<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdetail"
    tools:context=".Bit"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvbuncis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kavoon"
        android:text="Bit Merah"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kotakbuncis"
        android:layout_width="146dp"
        android:layout_height="122dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvbuncis"
        app:srcCompat="@drawable/kotakdetail" />

    <ImageView
        android:id="@+id/arrowback"
        android:layout_width="44dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/buncis"
        android:layout_width="127dp"
        android:layout_height="92dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="@id/kotakbuncis"
        app:layout_constraintTop_toBottomOf="@+id/tvbuncis"
        app:srcCompat="@drawable/bitmerah" />


    <ScrollView
        android:layout_width="355dp"
        android:layout_height="419dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/arrowback"
        app:layout_constraintTop_toBottomOf="@+id/tvbuncis"
        app:layout_constraintVertical_bias="0.786">

        <!-- ConstraintLayout di dalam ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextView pertama -->
            <TextView
                android:id="@+id/idpenjelasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="Deskripsi:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/arrowback"
                app:layout_constraintTop_toBottomOf="@+id/tvpanen"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/idpenjelasan2"
                android:layout_width="341dp"
                android:layout_height="189dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:text="Bit merah (Beta vulgaris var. rubra) adalah tanaman sayuran yang terkenal karena umbinya yang berwarna merah intens. Tanaman ini termasuk dalam keluarga Amaranthaceae dan berasal dari wilayah Eropa. Bit merah sering digunakan dalam berbagai hidangan, baik dimakan secara langsung maupun diolah menjadi sup, salad, atau saus. Selain umbinya yang dapat dimakan, daunnya juga dapat dimasak dan memiliki kandungan nutrisi yang baik. Bit merah memiliki siklus hidup yang umumnya cukup singkat dan dapat tumbuh hingga tinggi sekitar 30 hingga 60 sentimeter."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan" />

            <!-- TextView tambahan -->

            <TextView
                android:id="@+id/idpenjelasan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:text="Teknik Tanam: "
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan2" />

            <TextView
                android:id="@+id/idpenjelasan4"
                android:layout_width="341dp"
                android:layout_height="95dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:text="Bit merah dapat ditanam langsung di tanah. Penanaman biji dilakukan dengan menabur langsung di tempat tanam. Umbi bit biasanya siap untuk dipanen setelah mencapai ukuran yang diinginkan."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan3" />

            <TextView
                android:id="@+id/idpenjelasan5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:text="Hama: "
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan4" />

            <TextView
                android:id="@+id/idpenjelasan6"
                android:layout_width="341dp"
                android:layout_height="223dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:text="1. Lalat Buah: Lalat buah dapat menjadi hama pada bit merah dengan menyebabkan kerusakan pada daun dan buah bit.
2. Ulat: Ulat daun atau ulat tanah dapat merusak daun bit merah dengan mengunyahnya, menyebabkan lubang dan kerusakan pada tanaman.
3. Kutu Daun: Kutu daun dapat menghisap cairan dari daun bit merah, mengakibatkan kerusakan dan penurunan kualitas daun.
4. Thrips: Thrips adalah serangga kecil yang bisa merusak daun bit merah dengan menghisap cairan tanaman.
5. Walang Sangit: Walang sangit dapat mengisap cairan dari tanaman dan mengganggu pertumbuhan bit merah.
"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan5" />

            <TextView
                android:id="@+id/idpenjelasan7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:text=" Pengendalian Hama: "
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan6" />

            <TextView
                android:id="@+id/idpenjelasan8"
                android:layout_width="341dp"
                android:layout_height="381dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:text="1. Pengamatan Rutin: Amati tanaman secara teratur untuk mendeteksi tanda-tanda serangan hama atau penyakit sejak dini.
2. Pemangkasan: Pemangkasan daun atau bagian tanaman yang terinfeksi dapat membantu mengendalikan penyebaran hama.
3. Penggunaan Pestisida: Jika serangan hama atau penyakit parah, pertimbangkan untuk menggunakan pestisida organik atau kimia yang sesuai dengan petunjuk labelnya.
4. Rotasi Tanaman: Praktikkan rotasi tanaman setiap tahun untuk menghindari penumpukan hama dan penyakit di tanah.
5. Penyiraman Teratur: Jaga kelembaban tanah yang konsisten dan hindari menyiram langsung pada daun tanaman untuk mengurangi risiko penyakit jamur.
6. Varietas Tahan Hama: Pilih varietas bit merah yang tahan terhadap hama dan penyakit tertentu.
7. Perangkap Serangga: Gunakan perangkap serangga seperti perangkap kuning atau perangkap lebah untuk mengurangi populasi hama.
8. Alternatif Organik: Pertimbangkan penggunaan metode organik seperti penggunaan minyak neem atau larutan sabun untuk mengendalikan hama.
"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idpenjelasan7" />

            <!-- Tambahkan TextView tambahan sesuai kebutuhan -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/tvtanggal"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/arrowback"
        app:layout_constraintTop_toBottomOf="@+id/kotakbuncis"
        app:srcCompat="@drawable/editextborder"
        app:tint="#D9D9D9"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tvpanen"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/germania_one"
        android:text="1 bulan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/arrowback"
        app:layout_constraintTop_toBottomOf="@+id/kotakbuncis" />

    <ImageView
        android:id="@+id/kalendar"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/arrowback"
        app:layout_constraintTop_toBottomOf="@+id/kotakbuncis"
        app:srcCompat="@drawable/baseline_calendar_month_24"
        app:tint="#5B8E55" />
    />
    <!--    nav button-->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#60905B"
        android:foregroundTint="#60905B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="410dp"
            android:layout_height="175dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="632dp"
            android:src="@drawable/navbar_bg"></ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="707dp"
            android:src="@drawable/navbar_alarm"></ImageView>

        <ImageView
            android:id="@+id/iconlokasi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="710dp"
            android:src="@drawable/navbar_location"></ImageView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="55dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="702dp"
            android:src="@drawable/navbar_konten"></ImageView>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="699dp"
            android:src="@drawable/navbar_profile"></ImageView>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>