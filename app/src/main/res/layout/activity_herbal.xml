<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglokasi"
    tools:context=".Herbal"
    tools:ignore="ExtraText">


    <Button
        android:id="@+id/btnjenis"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#677E52"
        android:onClick="onKonfirmasiTanamanClick"
        android:text="Konfirmasi Tanaman"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/btnlokasi"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnlokasi"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#677E52"
        android:text="Konfirmasi Lokasi"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onKonfirmasiLokasiClick"/>

    <!-- Tambahkan kode ini setelah tombol yang sudah ada -->


    <Spinner
        android:id="@+id/spinnerLokasi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#000000"
        android:entries="@array/lokasi"
        app:layout_constraintBottom_toTopOf="@+id/kotakbit"
        app:layout_constraintStart_toStartOf="@+id/kotakseledri"
        app:layout_constraintTop_toBottomOf="@+id/bglokasi"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <Spinner
        android:id="@+id/spinnerJenis"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#000000"
        android:entries="@array/jenis"
        app:layout_constraintBottom_toTopOf="@+id/kotakarugula"
        app:layout_constraintStart_toStartOf="@+id/btnjenis"
        app:layout_constraintTop_toBottomOf="@+id/arrowback"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/kotakarugula"
        android:layout_width="99dp"
        android:layout_height="81dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="265dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <ImageView
        android:id="@+id/kotakbrusel"
        android:layout_width="99dp"
        android:layout_height="81dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="265dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <ImageView
        android:id="@+id/kotakbawangputih"
        android:layout_width="99dp"
        android:layout_height="81dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="265dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />


    <ImageView
        android:id="@+id/kotakseledri"
        android:layout_width="103dp"
        android:layout_height="82dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <ImageView
        android:id="@+id/kotakkemangi"
        android:layout_width="103dp"
        android:layout_height="82dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <ImageView
        android:id="@+id/kotakjahe"
        android:layout_width="103dp"
        android:layout_height="82dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <ImageView
        android:id="@+id/kotakkoriander"
        android:layout_width="99dp"
        android:layout_height="81dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <ImageView
        android:id="@+id/kotakbit"
        android:layout_width="99dp"
        android:layout_height="81dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:srcCompat="@drawable/editextborder" />

    <TextView
        android:id="@+id/tvbayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="290dp"
        android:text="Arugula"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <TextView
        android:id="@+id/tvbrokoli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="260dp"
        android:text="Kecambah Brusel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <TextView
        android:id="@+id/tvbawangputih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="270dp"
        android:text="Bawang Putih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <TextView
        android:id="@+id/tvkacangpolong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="170dp"
        android:text="Seledri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />


    <TextView
        android:id="@+id/tvkoriander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="40dp"
        android:text="Koriander"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <TextView
        android:id="@+id/tvbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="45dp"
        android:text="Bit Merah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <TextView
        android:id="@+id/tvkemangi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="160dp"
        android:text="Kemangi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <TextView
        android:id="@+id/tvseladahijau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="180dp"
        android:text="Jahe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis" />

    <!--
layout_constraintBottom_toTopOf, artinya berada di atas elemen x
layout_constraintStart_toStartOf, artinya berada di posisi awal yg sama, sumbu horizontal
layout_constraintTop_toBottomOf, artinya berada di bawah elemen
-->

    <ImageView
        android:id="@+id/arugula"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/kotakbrusel"
        app:layout_constraintStart_toStartOf="@+id/btnjenis"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/arugula"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/brusel"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvbrokoli"
        app:layout_constraintStart_toStartOf="@+id/kotakarugula"
        app:layout_constraintTop_toBottomOf="@+id/tvbayam"
        app:layout_constraintVertical_bias="0.21"
        app:srcCompat="@drawable/brusel"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/bawangputih"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvbawangputih"
        app:layout_constraintStart_toStartOf="@+id/kotakbawangputih"
        app:layout_constraintTop_toBottomOf="@+id/tvbrokoli"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bawangputih"
        tools:ignore="UnknownId,UnknownIdInLayout" />


    <ImageView
        android:id="@+id/seledri"
        android:layout_width="55dp"
        android:layout_height="76dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tvkacangpolong"
        app:layout_constraintStart_toStartOf="@+id/kotakseledri"
        app:layout_constraintTop_toBottomOf="@+id/btnjenis"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/seledri"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/kemangi"
        android:layout_width="55dp"
        android:layout_height="76dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tvkemangi"
        app:layout_constraintStart_toStartOf="@+id/kotakkemangi"
        app:layout_constraintTop_toBottomOf="@+id/tvkacangpolong"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kemangi"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/jahe"
        android:layout_width="55dp"
        android:layout_height="76dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tvseladahijau"
        app:layout_constraintStart_toStartOf="@+id/kotakjahe"
        app:layout_constraintTop_toBottomOf="@+id/tvkemangi"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/jahe"
        tools:ignore="UnknownId" />


    <ImageView
        android:id="@+id/bitmerah"
        android:layout_width="55dp"
        android:layout_height="76dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tvbitmerah"
        app:layout_constraintStart_toStartOf="@+id/kotakbit"
        app:layout_constraintTop_toBottomOf="@+id/btnlokasi"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bitmerah"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/arrowback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/koriander"
        android:layout_width="55dp"
        android:layout_height="76dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvkoriander"
        app:layout_constraintStart_toStartOf="@+id/kotakkoriander"
        app:layout_constraintTop_toBottomOf="@+id/tvbitmerah"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/koriander"
        tools:ignore="UnknownId,UnknownIdInLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
